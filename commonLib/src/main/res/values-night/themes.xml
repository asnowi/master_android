<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CommonAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/common_primary</item>
        <item name="colorPrimaryVariant">@color/common_primary_variant</item>
        <item name="colorOnPrimary">@color/common_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/common_secondary</item>
        <item name="colorSecondaryVariant">@color/common_secondary_variant</item>
        <item name="colorOnSecondary">@color/common_on_secondary</item>
        <!-- Customize brand color. -->
        <item name="colorError">@color/common_error</item>
        <item name="colorOnError">@color/common_on_error</item>
        <item name="colorSurface">@color/common_surface</item>
        <item name="colorOnSurface">@color/common_on_surface</item>
        <item name="android:colorBackground">@color/common_background</item>
        <item name="colorOnBackground">@color/common_on_background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/common_primary</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="CommonNoTitleBarTheme" parent="CommonAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>